
<div class="d-flex justify-content-center align-items-end">
 <h1 class="font">Dashboard</h1>
</div>
  <div class="container d-flex flex-column align-items-center border card-border" style="background: linear-gradient(45deg, #99A98F, #F2E3DB);">
    <h2 class="text-dark font p-2">Your Cars</h2>
  </div>

  <div class="container mt-2 bg">
    <div class = "d-flex flex-wrap justify-content-start">
      <% current_user.cars.each do |car|%>
        <div class="card-product m-2 card-border">
          <% if car.photos.attached? %>
              <% car.photos.each do |photo|%>
                <%= cl_image_tag photo.key%>
              <% end %>
          <% end %>
          <div class="card-product-infos">
            <div >
              <p>Model: <%= car.model %></p>
              <p>Year: <%= car.year %></p>
              <p>Price: <%= car.price %></p>
            </div>
              <%= link_to "Delete", car_path(car),
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                    class: "btn btn-outline-dark text-decoration-none p-1 m-2 card-border"
              %>
              <%= link_to "Edit",edit_car_path(car),class: "btn btn-outline-primary text-decoration-none p-1 m-2 card-border"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container d-flex flex-column align-items-center border card-border" style="background: linear-gradient(45deg, #F2E3DB, #99A98F);">
    <h2 class="text-dark font p-1">Your Bookings</h2>
  </div>
  <div class="container mt-2 bg">
    <div class = "d-flex flex-wrap justify-content-start">
      <% current_user.bookings.each do |booking|%>
        <div class="card-product m-2 card-border">
          <%= cl_image_tag booking.car.photos.first.key, height: 500, width: 200, crop: :fit %>
          <div class="card-product-infos">
            <p><%= booking.status %></p>
            <p>Start date: <%= booking.start_date %></p>
            <p>End Date: <%= booking.end_date %></p>
            <%= link_to "Delete", car_booking_path(booking.car, booking),
                  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                  class: "btn btn-outline-dark text-decoration-none p-1 m-2 card-border"
            %>
            <%= link_to "Edit",edit_car_booking_path(booking.car, booking),class: "btn btn-outline-primary text-decoration-none p-1 m-2 card-border"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>


