<div class="navbar bg-primary bg-gradient" style="height: 300px;">
<h2> Here are your car list </h2>
</div>

<div class="container">

  <div class="row">
    <div class="col-8">
      <div class="col-8">
      <h2> here go the car content </h2>
      <%= link_to "create a new card", new_car_path %>
      <form>
        <% @cars.each do |car| %>
          <div class="card">
          <%= car.model %>
          <%= car.price%>$
          <%= car.city %>
          <%= car.year %>
          <% if car.photos.attached? %>
            <% car.photos.each do |photo|%>
              <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
              <% end %>
            <% end %>
        <% end %>
          </div>
      </form>
      </div>
    </div>
    <div class="col-4">
    <h2> here go the form </h2>
    </div>
  </div>

</div>
