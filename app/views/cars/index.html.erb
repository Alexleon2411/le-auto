<div class="navbar banner" style="height: 300px;">
<h2> Here are your car list </h2>
</div>

<div class="container">

  <div class="row">
    <h2> here go the car content </h2>
    <%= link_to "create a new card", new_car_path %>
    <div class = "d-flex flex-wrap justify-content-around">
      <% @cars.each do |car| %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <img src="https://wallpaperset.com/w/full/2/d/b/483054.jpg" class="card-img-top" alt="car">
            <h5 class="card-title"><%= car.model %></h5>
            <p class="card-text">
              <%= car.price%>$
              <%= car.city %>
              <%= car.year %>
            </p>
            <% if car.photos.attached? %>
              <% car.photos.each do |photo|%>
                <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
              <% end %>
            <% end %>
            <%= link_to "More info", car_path(car) %>

          </div>
        </div>
      <% end %>
    </div>
  </div>
        <div class="col-4">
          <h2> here go the form </h2>
        </div>
    </div>
</div>



